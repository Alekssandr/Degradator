<!--        android:label="signin">-->
<!--        <action-->
<!--            android:id="@+id/action_navigation_signin_to_navigation_signup"-->
<!--            app:destination="@id/navigation_signup" />-->
<!--    </fragment>-->

    <fragment
        android:id="@+id/navigation_signup"
        android:name="com.degradators.degradators.ui.account.signup.SignUpFragment"
        android:label="signup"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_navigation_signup_to_navigation_account"
            app:destination="@+id/navigation_account"
            app:exitAnim="@anim/fragment_close_exit"
            app:launchSingleTop="false"
            app:popUpTo="@+id/navigation_account"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>